<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MuzeEserGoster">

    <TextView
        android:id="@+id/tx_eser_ad"
        android:layout_width="411dp"
        android:layout_height="57dp"
        android:text="@string/EserADi"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgv_eser_resim" />

    <ImageView
        android:id="@+id/imgv_eser_resim"
        android:layout_width="409dp"
        android:layout_height="281dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars[0]"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/tx_eser_detay"
        android:layout_width="399dp"
        android:layout_height="349dp"
        android:text="TextView"
        android:textSize="18sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_eser_ad"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imgbSound"
        android:layout_width="76dp"
        android:layout_height="68dp"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/play_button" />

</android.support.constraint.ConstraintLayout>